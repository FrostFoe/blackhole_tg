{
  "manifest_version": 3,
  "name": "Telegram Blackhole Theme",
  "version": "1.0.0",
  "description": "An immersive, ultra-dark 'blackhole' theme for Telegram Web.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://web.telegram.org/*"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}