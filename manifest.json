{
  "manifest_version": 3,
  "name": "Telegram Blackhole Theme",
  "version": "1.0.0",
  "description": "An immersive, ultra-dark 'blackhole' theme for Telegram Web.",
  
  "action": {
    "default_popup": "popup.html"
    
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://web.telegram.org/*"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}